 for i in `ls | grep mp4`; do echo "mv $i `exiftool $i | grep "^Create Date" | grep -v err | awk -F " " '{print $4"_"$5}' | sed 's/:/-/g' | cut -d "+" -f1`.mp4"; done
 echo "Shall we proceed? [yes/no]"
 read ANSWER

  if [[ $ANSWER == "yes" ]]; then
